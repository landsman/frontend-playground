root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.{htm,html,ts,tsx,sass,scss,less,svg,vue,json}]
indent_size = 2
indent_style = space

[*.{xml,config}]
indent_size = 2
